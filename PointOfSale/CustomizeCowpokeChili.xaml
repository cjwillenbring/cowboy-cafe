<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <StackPanel Width="300">
            <TextBlock FontSize="20" Text="Cowpoke Chili Customization" TextWrapping="Wrap"></TextBlock>
            <ToggleButton IsChecked="{Binding Path=GreenOnions}" Click="OnEventChange" Height="30" Margin="0 10 0 0">Green Onion</ToggleButton>
            <ToggleButton IsChecked="{Binding Path=Cheese}" Click="OnEventChange" Height="30" Margin="0 10 0 0">Cheese</ToggleButton>
            <ToggleButton IsChecked="{Binding Path=TortillaStrips}" Click="OnEventChange" Height="30" Margin="0 10 0 0">Tortilla Strips</ToggleButton>
            <ToggleButton IsChecked="{Binding Path=SourCream}" Click="OnEventChange" Height="30" Margin="0 10 0 0">Sour Cream</ToggleButton>
        </StackPanel>
    </Grid>
</UserControl>
